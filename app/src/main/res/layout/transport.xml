<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <!--Заголовок раздела-->
        <TextView
            android:id="@+id/article"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:height="0dp"
            android:layout_weight="20"
            android:text="Transport"
            android:textSize="40sp" />

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:orientation="horizontal">-->

            <!--Ввод заголовка новой статьи расходов-->
            <Spinner
                android:id="@+id/listOfTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:minWidth="150dp"
                android:minHeight="50dp" />

            <!--Ввод суммы новой главы расходов-->
            <EditText
                android:id="@+id/costOfExpenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="50dp"
                android:width="150dp"
                android:minHeight="50dp"
                android:ems="10"
                android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/text_view_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:minHeight="250dp"/>

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--Добавление статьи расходов-->
            <Button
                android:id="@+id/addSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="450dp"
                android:layout_weight="1"
                android:text="Add" />

            <!--Печать списка расходов-->
            <Button
                android:id="@+id/showExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="450dp"
                android:layout_weight="1"
                android:text="Show" />

            <!--Очищения списка расходов-->
            <Button
                android:id="@+id/clearStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="450dp"
                android:layout_weight="1"
                android:text="Clear" />

        </LinearLayout>

</RelativeLayout>